extends ../layout

block header
  link(rel='stylesheet', href='/stylesheets/registerform.css')

block content
    .headline
    h1.over= title
    // register form
    .main.container
      form(method='POST' action='register')
        .container
          label(for='uname')
            b Firstname
          input(type='text', placeholder='Foo', name='firstname', required='')
          label(for='psw')
            b Lastname
          input(type='password', placeholder='Bar', name='lastname', required='')
          label(for='email')
            b Email
          input(type='email', placeholder='Foo@Bar.com', name='email', required='')
          label(for='email')
            b Password
          input(type='password', name='password', required='')
          label(for='email')
            b Confirm Password
          input(type='password', name='confirmpassword', required='')
          button(type='submit') Login
          label
            input(type='checkbox', checked='checked', name='remember')
            |  Remember me